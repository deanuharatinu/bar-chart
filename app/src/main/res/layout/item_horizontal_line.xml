<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/horizontal_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_alignTop="@id/tv_horizontal_line_desc"
        android:layout_alignBottom="@id/tv_horizontal_line_desc"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/tv_horizontal_line_desc"
        android:background="@drawable/shape_dotted_line" />

    <TextView
        android:id="@+id/tv_horizontal_line_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        tools:text="5Jt" />

</RelativeLayout>